<UserControl x:Name="userControl" x:Class="VizijskiSustavWPF.BitButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VizijskiSustavWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
        
    <Grid x:Name="Grid"  Background="Black" Margin="0,0,0,0">
        <Button x:Name="Button" Style="{DynamicResource ButtonStill1}" Margin="1" FontWeight="Bold" Content="{Binding Text, ElementName=userControl}" PreviewMouseDown="Button_PreviewMouseDown" PreviewMouseUp="Button_PreviewMouseUp"/>
    </Grid>
</UserControl>
